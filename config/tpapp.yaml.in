hostname: {{ hostname }}
url_prefix: app

trailhead_url: http://{{ hostname }}/app

trailhead:
    pidfile: /var/run/tripplanner/trailhead.pid

riak:
    datadir: '/srv/riak/bitcask/'

adventurer:
    start: ['adventurer', 'start']
    stop: ['adventurer', 'stop']
    pidfile: '/var/run/tripplanner/adventurer.pid'

smtp:
    host: localhost
    port: 25
    from_line: BackCountry Tracks
    from_address: noreply@example.org
    subject: BackCountry Tracks Notification

mbox_file: '/var/mail/{{ user }}'

user: '{{ user }}'

pidfile: /var/run/tripplanner/groupleader.pid

messaging:
    connection_params:
        host: localhost

services:
    Gear/gear:
        queues:
            rpc: user_gear_rpc
        reply_exchange: rpc_reply
        database:
            host: localhost
            bucket: personal_gear
    Adventurer2/adventurer:
        queues:
            rpc: adventurer_rpc
        reply_exchange: rpc_reply
        database:
            host: localhost
            bucket: adventurers
    Trips/trips:
        queues:
            rpc: trips_rpc
        reply_exchange: rpc_reply
        database:
            host: localhost
            bucket: trips

logging:
    version: 1
    formatters:
      simple: 
        format: '%(asctime)s - %(name)s - %(levelname)s - %(message)s'
    handlers:
      main: 
        class: logging.FileHandler
        filename: /var/log/tripplanner.log
        formatter: simple
        level: DEBUG
    loggers:
      top:
        handlers: [main]
        level: DEBUG
        propagate: false
    root:
      handlers: [main]
      level: DEBUG

