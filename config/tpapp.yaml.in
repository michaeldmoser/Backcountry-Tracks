hostname: {{ hostname }}
url_prefix: app

trailhead_url: http://{{ hostname }}/app

trailhead:
    pidfile: /var/run/tripplanner/trailhead.pid

riak:
    datadir: '/srv/riak/bitcask/'

adventurer:
    start: ['adventurer', 'start']
    stop: ['adventurer', 'stop']
    pidfile: '/var/run/tripplanner/adventurer.pid'

smtp:
    host: localhost
    port: 25
    from_line: BackCountry Tracks
    from_address: noreply@example.org
    subject: BackCountry Tracks Notification

mbox_file: '/var/mail/{{ user }}'

user: '{{ user }}'

pidfile: /var/run/tripplanner/groupleader.pid

messaging:
    connection_params:
        host: localhost

services:
    Gear/gear:
        queues:
            rpc: user_gear_rpc
        reply_exchange: rpc
        database:
            host: localhost
            bucket: personal_gear
    Adventurer/adventurer:
        queues:
            rpc: adventurer_rpc
        reply_exchange: rpc
        database:
            host: localhost
            bucket: adventurers
        stmp:
            host: localhost
            port: 25
    Trips/trips:
        queues:
            rpc: trips_rpc
        reply_exchange: rpc
        database:
            host: localhost
            bucket: trips
    TrailHead/trailhead:
        cookie_secret: psx4I0LFuKEZhL2un7HUhoDMq7UR2ZUV2ja
        login_url: "/"
        handlers: 
            - ['/app/register', 'Adventurer/register']
            - ['/app/activate/(.*)/(.*)', 'Adventurer/activate']
            - ['/app/login', 'Adventurer/login']
            - ['/app/users/([^/]+)/gear', 'Gear/gear']
            - ['/app/users/([^/]+)/gear/([^/]+)$', 'Gear/gear']
            - ['/app/user', 'Adventurer/user']
            - ['/app/trips$', 'Trips/trips']
            - ['/app/trips/([0-9a-f-]+)$', 'Trips/trip']

message_routing:
    exchanges:
        - 
            exchange: rpc
            durable: True
            type: topic
    queues:
        - 
            queue: user_gear_rpc
            durable: True
        - 
            queue: adventurer_rpc
            durable: True
        - 
            queue: trips_rpc
            durable: True
    bindings:
        - 
            exchange: rpc
            queue: user_gear_rpc
            routing_key: rpc.gear
        - 
            exchange: rpc
            queue: adventurer_rpc
            routing_key: rpc.adventurer
        - 
            exchange: rpc
            queue: trips_rpc
            routing_key: rpc.trips

logging:
    version: 1
    formatters:
      simple: 
        format: '%(asctime)s - %(name)s - %(levelname)s - %(message)s'
    handlers:
      main: 
        class: logging.FileHandler
        filename: /var/log/tripplanner.log
        formatter: simple
        level: DEBUG
    loggers:
      top:
        handlers: [main]
        level: DEBUG
        propagate: false
    root:
      handlers: [main]
      level: DEBUG

